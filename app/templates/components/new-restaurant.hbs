<h2>Add a New Restaurant</h2>
{{#if addRestaurant}}
  <div class="new-restaurant">
    <div class="col-sm-8 ">
      <form>
        <div class="form-group">
          <label for="name">Restaurant Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="address">Restaurant Address</label>
          {{input value=address id="address"}}
        </div>

        <div class="form-group">
          <label for="cost">Cost</label>
          {{input value=cost id="cost"}}
        </div>

        <div class="form-group">
          <label for="cuisine">Cuisine</label>
          {{input value=cuisine id="cuisine"}}
        </div>

        <div class="form-group">
          <label for="photo">Image</label>
          {{input value=photo id="photo"}}
        </div>

        <button class="btn btn-default" {{action 'saveRestaurant' }}>Save</button>
      </form>
    </div>
  </div>
{{else}}
  <button {{action 'showRestaurantForm'}} class="btn btn-default">Add a Restaurant</button>
{{/if}}
