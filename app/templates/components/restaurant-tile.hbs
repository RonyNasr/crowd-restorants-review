<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <img src= {{restaurant.photo}}> <br>
    <div class="caption">
      <h3>{{restaurant.name}}</h3>
      <p>{{restaurant.cuisine}}</p>
      <p>${{restaurant.cost}}</p>
      <div class="add-review">
        {{#if wishlist.isFavorite}}
        <span  class="glyphicon glyphicon-heart fav-glyph" aria-hidden="true" {{action 'addToWishlist' restaurant}}>  </span>
        {{else}}
        <span class="glyphicon glyphicon-heart-empty fav-glyph" aria-hidden="true" {{action 'addToWishlist' restaurant}}>    </span>
        {{/if}}
        {{#link-to 'review' restaurant.id}}<button class="btn btn-warning">Review</button>{{/link-to}}
      </div>
    </div>
  </div>
</div>
