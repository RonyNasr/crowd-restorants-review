<h2>Add Your Review</h2>
<div class="new-review">
  <div class="col-sm-8 col-sm-offset-2">
    <form>
      <div class="form-group">
        <label for="name">Username</label>
        {{input value=name id="name"}}
      </div>
      <div class="form-group">
        <label for="content">Review</label>
        {{textarea cols="80" rows="4" value=content id="content"}}
        {{input type="hidden" value=rating id="rating" }}
        <div class="bottom">
          <button class="btn btn-warning" {{action 'saveReview'}}>Add Review</button>
        </div>
      </div>
    </form>
  </div>
</div>
